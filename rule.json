{
  "title":"Map Right Option plus l/p/quote/semicolon to Arrows and esc",
  "rules":[
    {
      "description":"Map Right Option plus l/p/quote/semicolon to Arrows and esc",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"escape",
            "modifiers":{
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"escape"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"escape",
            "modifiers":{
              "mandatory":[
                "right_alt"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"grave_accent_and_tilde"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"l",
            "modifiers":{
              "mandatory":[
                "right_alt"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"left_arrow"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"semicolon",
            "modifiers":{
              "mandatory":[
                "right_alt"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"down_arrow"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"p",
            "modifiers":{
              "mandatory":[
                "right_alt"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"up_arrow"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"quote",
            "modifiers":{
              "mandatory":[
                "right_alt"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"right_arrow"
            }
          ]
        }
      ]
    }
  ]
}
